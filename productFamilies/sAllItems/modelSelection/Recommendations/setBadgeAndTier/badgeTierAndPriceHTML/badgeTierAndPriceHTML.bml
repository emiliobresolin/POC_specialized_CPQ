  }
  retStr = retStr + "</ul>";
  retStr = retStr + "</div>";
}

if (apparelTotal > 0.0) {
  retStr = retStr + "<div style='margin-bottom: 15px; padding: 10px; border: 1px solid #ccc; border-radius: 6px;'>";
  retStr = retStr + "<p><b>üëï Apparel</b></p>";
  retStr = retStr + "<ul style='list-style: none; padding-left: 0;'>";
